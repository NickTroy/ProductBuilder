<div class="container">
  <div class="col-md-12">

  <% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% flash[:error].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <%= form_for @shipping_method do |f|  %>
  <div class="row">
    <div class="col-md-12">
      <%= f.label "interface[name]", "Name:" %>
      <%= f.text_field :name, class: "form-control" %>     
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-6">
     <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>  
</div>