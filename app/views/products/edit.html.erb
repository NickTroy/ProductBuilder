<div class="container">
<script type="text/javascript">



$(document).ready(function(){
  Dropzone.autoDiscover = false;
  $("#dropzone").dropzone({
    url: '<%= images_path %>',
    paramName: 'images',
    clickable: true,
    uploadMultiple: false,
    autoProcessQueue: false,
    addRemoveLinks: true,
    previewsContainer: '.dropzone-previews',
    clickable: true,
    init: function() {
      _this = this;
      var existingFiles = [];
      <% @images.each_with_index do |image, index| %>
        existingFiles.push({ id: "<%= image.id %>"});
        this.emit("addedfile", existingFiles[<%= index %>]);
        this.emit("thumbnail", existingFiles[<%= index %>], "<%= image.src %>");
      <% end %>
      
      this.on("addedfile", function(file){
        reader = new FileReader();
        reader.onload = handleReaderLoad;
        reader.readAsDataURL(file);
        function handleReaderLoad(evt) {
          document.getElementById("image_url")
                  .setAttribute('value', evt.target.result.split(',')[1]);
          document.getElementById("image_name")
                  .setAttribute('value', file.name);
          form = $('#file-form');
          $.ajax( {
            method: "POST",
            dataType: "json",
            timeout: 2000,
            url: "<%= images_path %>",
            data: form.serialize(),
          });
        }
        
      });
      
      this.on("removedfile", function(file){
        
        $.ajax( {
          method: "DELETE",
          timeout: 2000,
          url: "/images/" + file.id,
          data: { image_id: file.id, product_id: <%= @product.id%> }
        });
      });
    }
  });
});


</script>

<script>

  function showVariantsForm (){
    $('.variants_form').show();
  }
  
  function previewVariants() {
    var options = {};
    $('.option_values_row').each(function(){
      var option_name = $(this).find('p').text();
      options[option_name] = [];
      $(this).find('.option_values').each(function(){
        if ($(this).find('.option_value').is(":checked")) {
          var option_value = $(this).find('label').text();
          options[option_name].push(option_value); 
        }  
      });
      if (options[option_name] == '') {
        //alert(options[option_name]);
        delete options[option_name];
      }
      
    });
    
    //alert(JSON.stringify(options));
    
    function permute(options, optionIndex, results, current) {
      var allKeys = Object.keys(options);
      var optionKey = allKeys[optionIndex];

      var vals = options[optionKey];

      for (var i = 0; i < vals.length; i++) {
        current[optionKey] = vals[i];

        if (optionIndex + 1 < allKeys.length) {
          permute(options, optionIndex + 1, results, current);
        } else {
          // clone an object.
          var res = JSON.parse(JSON.stringify(current));
          results.push(res);
        }
      }

      return results;
    }
  var variants = permute(options,0,[],{});
  $('#variants').val(JSON.stringify(variants));
  //alert(variants.length);
  //alert(JSON.stringify(variants[0]));
  $('.preview_product_variants').text('');
  for(var i=0;i<variants.length;i++){
    $('<h2>').appendTo('.preview_product_variants');
    for (option_value in variants[i]) {
      $('<span>' + variants[i][option_value]+ ' </span>').appendTo('.preview_product_variants');
    }
    $('</h2><br>').appendTo('.preview_product_variants');
    
  };
  $('<input value="Save product variants" onclick="alert(\'sent\')" class="btn btn-primary" type="button">').appendTo('.preview_product_variants');
  
  }
  
$(document).ready(function(){
  $('.option_value').change(function(){
    var options_selected, number_of_variants;
    options_selected = parseInt($(this).parents('.option_values_row').children('.number_of_values_selected').text());
    if($(this).is(":checked")) {
      options_selected = options_selected + 1;
    } else {
      options_selected = options_selected - 1;
    }
    
    $(this).parents('.option_values_row').children('.number_of_values_selected').text(options_selected);
    $(this).parents('.option_values_row').children('#options_selected').val(options_selected);
    
    number_of_variants = 1;
    $('.variants_form #options_selected').each(function(){
      var num_of_opts = parseInt($(this).val());
      if (num_of_opts > 1) {
        number_of_variants = number_of_variants * num_of_opts;
      }
    });
    $('.number_of_variants').text(number_of_variants);
  });
});
  
</script>

